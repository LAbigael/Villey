---
import Logo from "./icons/Logo.astro";

---

<div class="head1">
  <h1><span class="text-gradient">Droit Philosophie</span></h1>
  <Logo></Logo>
</div>

<style>
  .head1{
    background-color: rgba(var(--accent-light));
    min-height: 150px;

    }
    h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
    
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
