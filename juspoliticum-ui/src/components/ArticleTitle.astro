---
const { article } = Astro.props;
---

<span class="mr-1">
  {article.authors.map((a) => a?.author_id?.fullname).join(", ")}{" "}
   :
</span>
<span class="article_title jp_link cursor-pointer">
  {article.title}
</span>
<div>
  <a href={`/articles/${article.slug}`} class="jp_summary">
    <>
      {
        article.abstracts
          .filter((a) => a.language == "fr")
          .map((a) => <span class={`${a.language}`} set:html={a.content} />)
      }
    </>
  </a>
</div>
<style>
  .jp_summary {
    display: block;
    overflow: hidden;
    max-height: 0;
    transition: max-height 0.5s cubic-bezier(0, 1, 0, 1);
  }

  .jp_summary.full {
    max-height: 1000px;
    transition: max-height 1s ease-in-out;
  }


  .authors {
    @apply mr-2;
  }

  .article_title {
    @apply text-lg font-semibold;
  }
</style>
