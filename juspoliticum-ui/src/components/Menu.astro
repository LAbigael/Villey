---
import LogoNavBar from "./icons/LogoNavBar.astro";
import Logo from "../images/juspoliticum.png";
import Alerte from "../images/alerte.png";
import Search from "./Search.astro";
import LanguageToggle from "./LanguageToggle.astro";
---

<div class="menu font-sans">
  <div class="navbar">
    <div class="navbar-start">
      <div class="dropdown">
        <label tabindex="0" class="lg:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-7 w-7"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h8m-8 6h16"></path></svg
          >
        </label>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 w-52"
        >
          <li><a href="/">Accueil</a></li>
          <li><a href="/about">Présentation</a></li>
          <li>
            <a href="#">Numéros</a>
            <ul class="p-2">
              <li>
                <a href="/volumes">Numéros numériques</a>
              </li>
              <li><a href="/">Numéros imprimés</a></li>
            </ul>
          </li>
          <li><a href="/actualites">Actualité</a></li>
          <li><a href="/themes">Thèmes</a></li>
          <li>
            <a href="/auteurs">Auteurs</a>
          </li>
          <li>
            <a href="/proposer-un-article">Proposer un article</a>
          </li>
          <li><a href="/auteurs">Liste des auteurs</a></li>
        </ul>
        <div class="flex"></div>
      </div>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
          <li><a href="/about">Présentation de la revue</a></li>
          <li tabindex="0">
            <details>
              <summary class="summary text-inherit hover:text-inherit">Volumes</summary>
              <ul class="p-1 rounded-none sub z-20">
                <li><a href="/publications">Volumes imprimés</a></li>
                <li><a href="/volumes">Volumes numériques</a></li>
              </ul>
            </details>
          </li>
          <li>
            <a class="flex flex-row items-center" href="/actualites">
              <img src={Alerte.src} alt="Alert" class="h-auto w-30" />
              Actualités</a
            >
          </li>
          <li><a href="/auteurs">Auteurs</a></li>
          <li><a href="/themes">Themes</a></li>
          <li><a href="/proposer-un-article">Proposer un article</a></li>
        </ul>
      </div>
      <div class="navbar-end">
        <Search />
      </div>
    </div>
  </div>

  <style>
    .menu {
      @apply bg-accent-dark dark:bg-accent-dark text-color items-center;
    }
    .menu li a {
      @apply text-color-light;
    }
    .sub {
      @apply bg-accent-light dark:bg-accent-dark text-accent-dark dark:text-accent-light;
    }
    .summary {
      @apply hover:text-accent-dark hover:dark:text-accent-light text-accent-light dark:text-accent-dark;
    }
  </style>
</div>
