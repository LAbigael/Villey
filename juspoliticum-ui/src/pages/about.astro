---
import Layout from "../layouts/Layout.astro";
import PageLayout from "../layouts/PageLayout.astro";

import { getDirectusClient } from "../utils/get-directus-client.js";
import { readItems, readItem } from "@directus/sdk";

const directus = await getDirectusClient();
const home = await directus.request(
  readItems("Pages", {
  fields: ["id","key", "content"],
    filter: {
      key: {
        _eq: "jp_presentation",
      },
    },
  }),
);

const content = home[0].content;
---

<Layout title="Présentation">
  <PageLayout title="Présentation de la revue" className="max-w-screen-2xl lg:px-24 px-10">
    <div set:html={content} />
  </PageLayout>
</Layout>
